@page "/feeds"
@using PodcastDownloader.Library

@* Paging variables *@
@code {
    private int PageSize { get; set; } = 5;
    private int CurrentPage { get; set; } = 1;
    private int TotalPages => (int)Math.Ceiling((double)Feeds.Count / PageSize);
    private IEnumerable<PodcastFeed> PagedFeeds => Feeds.Skip((CurrentPage - 1) * PageSize).Take(PageSize);
    private void GoToPage(int page)
    {
        if (page < 1) page = 1;
        if (page > TotalPages) page = TotalPages;
        CurrentPage = page;
    }
}

<h3 class="mb-4">Podcast Feeds</h3>

<button class="btn btn-primary mb-3" @onclick="ShowAddFeed">Add Feed</button>

@if (IsAdding)
{
    <EditForm Model="NewFeed" OnValidSubmit="AddFeed" class="mb-3">
        <div class="row g-2 align-items-center">
            <div class="col">
                <InputText class="form-control" @bind-Value="NewFeed.Name" placeholder="Name" />
            </div>
            <div class="col">
                <InputText class="form-control" @bind-Value="NewFeed.Url" placeholder="URL" />
            </div>
            <div class="col-auto">
                <div class="form-check">
                    <InputCheckbox class="form-check-input" @bind-Value="NewFeed.IsLocal" />
                    <label class="form-check-label">Local</label>
                </div>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-success me-2">Save</button>
                <button type="button" class="btn btn-secondary" @onclick="CancelAdd">Cancel</button>
            </div>
        </div>
    </EditForm>
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th style="width: 180px;">Name</th>
                <th style="width: 320px; word-break: break-all;">URL</th>
                <th style="width: 80px;">Local</th>
                <th style="width: 220px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var feed in PagedFeeds)
            {
                <tr>
                    <td>@feed.Name</td>
                    <td class="text-truncate" style="max-width: 320px;">@feed.Url</td>
                    <td>@feed.IsLocal</td>
                    <td>
                        <div class="btn-group" role="group">
                            <button class="btn btn-sm btn-warning" @onclick="() => EditFeed(feed)">Edit</button>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteFeed(feed)">Delete</button>
                            <button class="btn btn-sm btn-info" @onclick="() => TestFeed(feed)">Test</button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<nav aria-label="Feed paging">
    <ul class="pagination justify-content-center">
        <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
            <button class="page-link" @onclick="() => GoToPage(CurrentPage - 1)">&laquo;</button>
        </li>
        @for (int i = 1; i <= TotalPages; i++)
        {
            <li class="page-item @(CurrentPage == i ? "active" : "")">
                <button class="page-link" @onclick="() => GoToPage(i)">@i</button>
            </li>
        }
        <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
            <button class="page-link" @onclick="() => GoToPage(CurrentPage + 1)">&raquo;</button>
        </li>
    </ul>
</nav>

@if (IsEditing)
{
    <EditForm Model="EditFeedModel" OnValidSubmit="SaveEdit" class="mb-3">
        <div class="row g-2 align-items-center">
            <div class="col">
                <InputText class="form-control" @bind-Value="EditFeedModel.Name" placeholder="Name" />
            </div>
            <div class="col">
                <InputText class="form-control" @bind-Value="EditFeedModel.Url" placeholder="URL" />
            </div>
            <div class="col-auto">
                <div class="form-check">
                    <InputCheckbox class="form-check-input" @bind-Value="EditFeedModel.IsLocal" />
                    <label class="form-check-label">Local</label>
                </div>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-success me-2">Update</button>
                <button type="button" class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
            </div>
        </div>
    </EditForm>
}

@if (!string.IsNullOrEmpty(TestResult))
{
    <div class="alert alert-info">@TestResult</div>
}
